author: Mark Fiers
backend: gnumake
commands: [gather, clean]
creation_date: Wed Nov 10 07:56:48 2010
description: gather a set of files and create hardlinks to. Hardlinks have as advantage
  that updates are noticed via the timestamp. Hence, make recognizes them.
gnumake_makefile: /tmp/x/gather.mk
help: {clean: 'Remove all job data, not the Moa job itself, note that this must be
    implemented by the template.', gather: gather files}
moa_id: gather
modification_date: Wed Nov 10 07:56:48 2010
name: gather
parameter_category_order: ['', system, advanced]
parameters:
  g_input_dir:
    allowed: []
    category: ''
    default: ''
    help: list of directories with the input files
    mandatory: true
    type: directory
  g_input_pattern:
    allowed: []
    category: ''
    default: '*'
    help: glob pattern to download
    mandatory: false
    type: string
  g_limit:
    allowed: []
    category: ''
    default: '1000000'
    help: limit the number of files gathered (with the most recent files first, defaults
      to 1mln)
    mandatory: false
    type: integer
  g_name_sed:
    allowed: []
    category: ''
    default: s/a/a/
    help: SED expression to be executed on each file name - allows you to change file
      names
    mandatory: false
    type: string
  g_output_dir:
    allowed: []
    category: ''
    default: .
    help: Output subdirectory, defaults to .
    mandatory: false
    type: directory
  g_parallel:
    allowed: [T, F]
    category: ''
    default: F
    help: allow parallel execution (T) or not (**F**). If for example concatenating
      to one single file, you should not have multiple threads.
    mandatory: false
    type: set
  g_powerclean:
    allowed: [T, F]
    category: ''
    default: F
    help: Do brute force cleaning (T/F). Remove all files, except moa.mk & Makefile
      when calling make clean. Defaults to F.
    mandatory: false
    type: set
  g_process:
    allowed: []
    category: ''
    default: ln -f $$< $$(g_target)
    help: Command to process the files. If undefined, hardlink the files.
    mandatory: false
    type: string
  moa_postcommand:
    allowed: []
    category: advanced
    default: ''
    help: A single shell command to be executed after the Moa is finished. For more
      complex processing please override the moa_postprocess target in the local Makefile.
    mandatory: false
    type: string
  moa_precommand:
    allowed: []
    category: advanced
    default: ''
    help: A single command to be executed before the main operation starts. For more
      complicated processing, please override the moa_preprocess target in the local
      Makefile.
    mandatory: false
    type: string
  title:
    allowed: []
    category: system
    default: ''
    help: A name for this job
    mandatory: true
    type: string
title: gather files
