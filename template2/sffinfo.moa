author: Mark Fiers
backend: gnumake
commands: [sffinfo, clean]
creation_date: Wed Nov 10 07:56:48 2010
description: Roche sffinfor tool - extract information from sff files
gnumake_makefile: /home/mf/project/moa/template2/sffinfo.mk
help: {clean: 'Remove all job data, not the Moa job itself, note that this must be
    implemented by the template.', sffinfo: 'Use the Roche sffinfo tool to extract
    reads, quality scores, flowgrams and accession ids from one or more sff files'}
moa_id: sffinfo
modification_date: Wed Nov 10 07:56:48 2010
name: sffinfo
parameter_category_order: ['', input, system, advanced]
parameters:
  accessions:
    allowed: [T, F]
    category: ''
    default: T
    help: Output the accessions
    mandatory: false
    type: set
  flowgrams:
    allowed: [T, F]
    category: ''
    default: F
    help: output the flowgrams
    mandatory: false
    type: set
  input_dir:
    allowed: []
    category: input
    default: ''
    help: Sff input files
    mandatory: true
    type: directory
  input_extension:
    allowed: []
    category: input
    default: sff
    help: file extension for the files in sffinfo_input_dir
    mandatory: false
    type: string
  input_glob:
    allowed: []
    category: input
    default: '*'
    help: glob to select a subset of files from sffinfo_input_dir
    mandatory: false
    type: string
  input_limit:
    allowed: []
    category: input
    default: ''
    help: 'Number of files to use, if not defined: all files'
    mandatory: false
    type: integer
  input_sort:
    allowed: [u, s, sr, t, tr]
    category: input
    default: u
    help: 'Sort order. Choose from: u - unsorted, s - size, sr - size reverse, t -
      time, tr - time reverse'
    mandatory: false
    type: set
  moa_postcommand:
    allowed: []
    category: advanced
    default: ''
    help: A single shell command to be executed after the Moa is finished. For more
      complex processing please override the moa_postprocess target in the local Makefile.
    mandatory: false
    type: string
  moa_precommand:
    allowed: []
    category: advanced
    default: ''
    help: A single command to be executed before the main operation starts. For more
      complicated processing, please override the moa_preprocess target in the local
      Makefile.
    mandatory: false
    type: string
  quality:
    allowed: [T, F]
    category: ''
    default: T
    help: Output quality scores
    mandatory: false
    type: set
  sequences:
    allowed: [T, F]
    category: ''
    default: T
    help: Output the sequences
    mandatory: false
    type: set
  title:
    allowed: []
    category: system
    default: ''
    help: A name for this job
    mandatory: true
    type: string
  untrimmed:
    allowed: [T, F]
    category: ''
    default: F
    help: output untrimmed sequences & qualities
    mandatory: false
    type: set
title: sffinfo
