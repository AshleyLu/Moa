#!/usr/bin/env python

## Imports ##
import sys
import os
import os.path

## Main Logic ##

if "MOABASE" in os.environ: # if a MOABASE exists
    sys.path.append(os.path.join(os.environ["MOABASE"], "www/lib/python")) # add the WWWMoa library path
else: # if a MOABASE does not exist
    print "Sorry, but a Moa implementation could not be found." # say so
    sys.exit(0x02); # terminate with an error code

import wwwmoa.util.lighty # run utility
